
<%= render "nav" %>

<h2>
  <%= @message + @user.username %>!
</h2>

<h3>Sales to Date: $<%= @total_sales %></h3>
<h3>Total Items Sold: <%= @quantity_sold %></h3>
<h3>Recent Sales</h3>
<table class="table">
  <thead>
    <tr>
      <th>
        Product
      </th>
      <th>
        Quantity Sold
      </th>
      <th>
        Status
      </th>
    </tr>
  </thead>
  <tbody>
    <% @recent_sales.each do |x| %>
      <tr>
        <td>
          <%= link_to("#{x.product.name}", user_order_path(@user.id, x.order_id)) %>
        </td>
        <td>
          <%= x.quantity %>
        </td>
        <td>
          <%= x.order.status %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>
